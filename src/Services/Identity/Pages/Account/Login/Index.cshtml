@model Mango.Services.Identity.Pages.Login.Index
@{
    ViewData["Title"] = "Login";
}

<div class="form-holder">
    <div class="form-content">

        <div class="form-items">
            <div class="mb-5 text-center">
                <h5 class="form-title-center">Sign In</h5>
            </div>
            <form class="validate-js needs-validation" asp-page="/Account/Login/Index">
                <partial name="_ValidationSummary" />
                <input type="hidden" asp-for="Input.ReturnUrl" />
                <div class="form-floating mb-3">
                    <input class="form-control" required placeholder="" asp-for="Input.Username" />
                    <label asp-for="Input.Username">Email or username</label>
                    <span class="text-danger" asp-validation-for="Input.Username" />
                </div>

                <div class="form-floating mb-3">
                    <input class="form-control" placeholder="" asp-for="Input.Password" />
                    <label asp-for="Input.Password">Password</label>
                    <span class="small error-message" asp-validation-for="Input.Password" />
                </div>

                @if (Model.View.AllowRememberLogin)
                {
                    <div class="form-check px-0">
                        <input class="form-check-input" asp-for="Input.RememberLogin" />
                        <label class="form-check-label" asp-for="Input.RememberLogin">
                            Remember me
                        </label>
                    </div>
                }

                <div class="form-button mt-5 mb-3">
                    <button class="btn btn-lg ibtn ibtn-full mb-3" name="Input.Button" value="Sign In">Sign In</button>
                    <button class="btn btn-lg ibtn bg-danger ibtn-full" name="Input.Button" value="Cancel">Cancel</button>
                </div>

                <div class="d-flex justify-content-center mb-3 mt-3">
                    <span class="text-muted text-center">or</span>
                </div>

                <div class="d-flex mb-5 justify-content-center">
                    <a class="link-underline link-underline-opacity-0" asp-page="/Account/Register/Index" asp-route-returnUrl="@Model.Input.ReturnUrl">Create new account</a>
                </div>

                <p class="small text-muted">Not your computer? Use a private browsing window to sign in.</p>

            </form>
        </div>
    </div>
</div>

